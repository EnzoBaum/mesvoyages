{% extends "basefront.html.twig" %}

{% block body %}
    <table class ="table table-striped">
        <thread>
            <tr>
                <th class ="text-left" scope="col">
                    Ville
                    <a href="{{ path('voyages.sort', {champ:'ville', ordre:'ASC'}) }}"
                    <a href="#" class ="btn btn-primary btn-sm active" role="button" aria-pressed="true"><</a>
                    <a href="{{ path('voyages.sort', {champ:'ville', ordre:'DESC'}) }}"
                    <a href="#" class ="btn btn-primary btn-sm active" role="button" aria-pressed="true">></a>
                <th class ="text-left" scope="col">
                    Pays
                    <a href="{{ path('voyages.sort', {champ:'pays', ordre:'ASC'}) }}"
                    <a href="#" class ="btn btn-primary btn-sm active" role="button" aria-pressed="true"><</a>
                    <a href="{{ path('voyages.sort', {champ:'pays', ordre:'DESC'}) }}"
                    <a href="#" class ="btn btn-primary btn-sm active" role="button" aria-pressed="true">></a>
                <th class ="text-end" scope="col">
                    Note
                    <a href="{{ path('voyages.sort', {champ:'note', ordre:'ASC'}) }}"
                    <a href="#" class ="btn btn-primary btn-sm active" role="button" aria-pressed="true"><</a>
                    <a href="{{ path('voyages.sort', {champ:'note', ordre:'DESC'}) }}"
                    <a href="#" class ="btn btn-primary btn-sm active" role="button" aria-pressed="true">></a>
                <th class ="text-center" scope="col">
                    Date
                    <a href="{{ path('voyages.sort', {champ:'datecreation', ordre:'ASC'}) }}"
                    <a href="#" class ="btn btn-primary btn-sm active" role="button" aria-pressed="true"><</a>
                    <a href="{{ path('voyages.sort', {champ:'datecreation', ordre:'DESC'}) }}"
                    <a href="#" class ="btn btn-primary btn-sm active" role="button" aria-pressed="true">></a>
            </tr>
        </thread>
        <tbody>
            {% for visite in visites %}
                <tr>
                    <td>
                        <h5 class="text-primary">
                            <a href="#">{{ visite.ville }}</a>
                        </h5>
                    </td>
                    <td>
                        {{ visite.pays }}
                    </td>
                    <td class="text-end">
                        <strong>
                            {% if visite.note<10 %}
                                <div class="text-danger">
                                    {{ visite.note }}/20
                                </div>
                            {% else %}
                                <div class ="text-success">
                                    {{ visite.note }}/20
                                </div>
                            {% endif %}
                        </strong>
                    </td>
                    <td class="text-center">
                        {{ visite.datecreationstring }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}